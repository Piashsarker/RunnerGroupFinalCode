<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_search" />

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ajoy Kumar Paul"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnMemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@android:drawable/ic_dialog_email"

                android:onClick="btnMemoOnClick"
                android:text="Memo"
                android:textColor="@color/background_color" />

            <Button
                android:id="@+id/btnHrData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_input_add"
                android:onClick="btnHrDataOnclick"
                android:text="HR Data"
                android:textColor="@color/background_color" />

            <Button
                android:id="@+id/btnRecommendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_myplaces"
                android:onClick="btnRecommendationOnClick"
                android:text="Recommendation"
                android:textColor="@color/background_color" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_secure"
                android:onClick="btnLogOutOnClick"
                android:text="Logout"
                android:textColor="@color/background_color" />


            <Button
                android:id="@+id/btnExits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_delete"
                android:onClick="btnExitsOnClick"
                android:text="EXits"
                android:textColor="@color/background_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:text="RUNNER GROUP"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFF" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
