<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"></include>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        tools:context=".fragment.HomeFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">


                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@android:drawable/ic_menu_recent_history"
                    android:onClick="btnAttendanceReportOnclik"
                    android:text="Attendance Report"
                    android:textColor="@color/background_color" />


                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/ic_input_add"
                    android:onClick="btnLeaveAndTourOnclick"
                    android:text="Leave Insert"
                    android:textColor="@color/background_color" />

                <Button
                    android:id="@+id/btnLeaveAndTourReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/ic_menu_recent_history"
                    android:onClick="btnLeaveAndTourReportOnClick"
                    android:text="Leave Report"
                    android:textColor="@color/background_color" />

                <Button
                    android:id="@+id/btnTourAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/ic_input_add"
                    android:onClick="btnTourAddOnClick"
                    android:text="Tour Insert"
                    android:textColor="@color/background_color" />

                <Button
                    android:id="@+id/btnTourReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/ic_menu_recent_history"
                    android:onClick="btnTourReportOnClick"
                    android:text="Tour Report"
                    android:textColor="@color/background_color" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/ic_input_add"
                    android:onClick="btnOnDutyOnclick"
                    android:text="On Duty Insert"
                    android:textColor="@color/background_color" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/ic_menu_recent_history"
                    android:onClick="btnOnDutyInsertOnclick"
                    android:text="On Duty Report"
                    android:textColor="@color/background_color" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:text="RUNNER GROUP"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFF" />
                </RelativeLayout>


            </LinearLayout>

        </ScrollView>


    </RelativeLayout>


</LinearLayout>